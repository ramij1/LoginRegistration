<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ghost_app_background"
    android:orientation="vertical"
    android:weightSum="10"
    android:layout_weight="0"
    tools:context=".MainActivity">

    <!--android:scrollbars="horizontal"-->


    <LinearLayout
        android:layout_weight="2.5"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:textStyle="italic"
            android:textColor="@color/Wlightorange"
            android:layout_marginTop="150dp"
            android:text="Ghost App"
            android:textAlignment="center"
            android:textSize="50dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_weight="1.5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">


        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_email_drawable"
            android:inputType="textEmailAddress"
            android:hint="Enter Email"
            android:textColor="@color/Wlightorange"
            android:textColorHint="@color/darker_gray"
            android:padding="15dp"
            android:layout_weight=".75"
            />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Pasword"
            android:drawableLeft="@android:drawable/ic_lock_idle_lock"
            android:textColor="@color/Wlightorange"
            android:textColorHint="@color/darker_gray"
            android:inputType="textPassword"
            android:padding="15dp"
            android:layout_weight=".75"/>


    </LinearLayout>

    <LinearLayout
        android:layout_weight="1.5"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textAllCaps="false"
            android:background="@drawable/custome_button1"
            android:textColor="@color/Wlightorange"
            android:layout_gravity="center_horizontal"
            android:layout_weight=".75"
            />

        <Button
            android:id="@+id/tvRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:layout_marginTop="15dp"
            android:background="@drawable/custome_button1"
            android:textColor="@color/Wlightorange"
            android:textAllCaps="false"
            android:layout_gravity="center_horizontal"
            android:layout_weight=".75"
            />

    </LinearLayout>



    <LinearLayout
        android:layout_weight="3.5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password?"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/Wlightorange"
            />
        <TextView
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="No of attempts remaining : "
            android:textColor="@color/Wlightorange"
            android:layout_marginTop="25dp"
            />




    </LinearLayout>




